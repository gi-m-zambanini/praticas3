<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#E8FAE2BF">

        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/imgComentario"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:adjustViewBounds="true"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvUserComentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@+id/imgComentario"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/tvComentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_below="@+id/tvUserComentario"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="400dp"
        android:layout_height="2dp"
        android:background="@drawable/laranja"/>
</androidx.cardview.widget.CardView>