<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/criarconta"
    tools:context=".MainLogin">

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="142dp"
        android:layout_height="64dp"
        android:layout_marginBottom="216dp"
        android:backgroundTint="#F8AC3A"
        android:fontFamily="@font/lato"
        android:text="Entrar"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCriarConta"
        android:layout_width="169dp"
        android:layout_height="49dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btncliqueaqui"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="@font/lato"
        android:text="Clique aqui"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="277dp"
        android:layout_height="231dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/edtcustomizado"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:hint="Email:"
        android:inputType="textEmailAddress"
        android:paddingLeft="8dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/edtcustomizado"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:hint="Senha:"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="169dp"
        android:layout_height="40dp"
        android:layout_marginTop="92dp"
        android:text="NÃ£o tem conta?"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEntrar" />

</androidx.constraintlayout.widget.ConstraintLayout>