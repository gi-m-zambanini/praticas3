<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CriarReceita"
    android:id="@+id/drawer_layout">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/main_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    >
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btnSalvarNovaReceita"
                    android:layout_width="122dp"
                    android:layout_height="51dp"
                    android:layout_marginStart="136dp"
                    android:layout_marginBottom="72dp"
                    android:backgroundTint="#F8AC3A"
                    android:fontFamily="@font/lato"
                    android:text="Salvar"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="476dp"
                    android:layout_height="142dp"
                    android:layout_marginTop="80dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.507"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/img" />

                <EditText
                    android:id="@+id/edtNome"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="244dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/edtcustomizado"
                    android:ems="10"
                    android:fontFamily="@font/lato"
                    android:hint="Nome:"
                    android:inputType="number|text"
                    android:paddingLeft="8dp"
                    android:textAlignment="textStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/edtComentario"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="552dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/edtcustomizado"
                    android:ems="10"
                    android:fontFamily="@font/lato"
                    android:hint="Comentario:"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:textAlignment="textStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/edtIngrediente"
                    android:layout_width="0dp"
                    android:layout_height="93dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="304dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/edtcustomizado"
                    android:ems="10"
                    android:fontFamily="@font/lato"
                    android:hint="Ingredientes:"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:textAlignment="textStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/edtPreparo"
                    android:layout_width="0dp"
                    android:layout_height="139dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="404dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/edtcustomizado"
                    android:ems="10"
                    android:fontFamily="@font/lato"
                    android:hint="Modo de Preparo:"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:textAlignment="textStart"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/btnCalorias"
                    android:layout_width="139dp"
                    android:layout_height="74dp"
                    android:backgroundTint="#C4C4C4"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:text="Calorias"
                    android:textAlignment="center"
                    android:textColor="#0E0E0E"
                    app:icon="@drawable/fogo"
                    app:iconGravity="top"
                    app:iconPadding="3dp"
                    app:iconSize="30dp"
                    app:iconTint="#FF0E0E0E"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnHome" />

                <Button
                    android:id="@+id/btnReceitas"
                    android:layout_width="139dp"
                    android:layout_height="74dp"
                    android:backgroundTint="#C4C4C4"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:text="Receitas"
                    android:textAlignment="center"
                    android:textColor="#0E0E0E"
                    app:icon="@drawable/receitas"
                    app:iconGravity="top"
                    app:iconPadding="6dp"
                    app:iconSize="30dp"
                    app:iconTint="#FF0E0E0E"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnHome"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/btnHome"
                    android:layout_width="139dp"
                    android:layout_height="74dp"
                    android:backgroundTint="#C4C4C4"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:text="Home"
                    android:textAlignment="center"
                    android:textColor="#0E0E0E"
                    app:icon="@drawable/home"
                    app:iconGravity="top"
                    app:iconPadding="6dp"
                    app:iconSize="30dp"
                    app:iconTint="#FF0E0E0E"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="105dp"
                    android:layout_height="99dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView4"
                    app:srcCompat="@drawable/img_1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:menu="@menu/nav_menu"
            android:id="@+id/nav_view"
            android:layout_gravity="start">
        </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
