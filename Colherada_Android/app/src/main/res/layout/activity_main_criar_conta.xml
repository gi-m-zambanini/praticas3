<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/criarconta"
    tools:context=".MainCriarConta">

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="122dp"
        android:layout_height="51dp"
        android:layout_marginStart="152dp"
        android:layout_marginBottom="184dp"
        android:backgroundTint="#F8AC3A"
        android:fontFamily="@font/lato"
        android:text="Salvar"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="169dp"
        android:layout_height="49dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btncliqueaqui"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="@font/lato"
        android:text="Clique aqui"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="244dp"
        android:layout_height="206dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="37dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_menu_24" />

    <EditText
        android:id="@+id/edtNome"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="282dp"
        android:background="@drawable/edtcustomizado"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:hint="Nome:"
        android:inputType="number"
        android:paddingLeft="8dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="352dp"
        android:background="@drawable/edtcustomizado"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:hint="Email:"
        android:inputType="number"
        android:paddingLeft="8dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="428dp"
        android:background="@drawable/edtcustomizado"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:hint="Senha:"
        android:inputType="number"
        android:paddingLeft="8dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="169dp"
        android:layout_height="40dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="65dp"
        android:text="JÃ¡ tem conta?"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSalvar" />
</androidx.constraintlayout.widget.ConstraintLayout>