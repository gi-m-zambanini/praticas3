<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/criarconta"
    tools:context=".MainCriarConta">

    <androidx.cardview.widget.CardView
        android:id="@+id/cdviewImgUser"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="70dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="80dp"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/suco" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="122dp"
        android:layout_height="51dp"
        android:layout_marginBottom="184dp"
        android:backgroundTint="#F8AC3A"
        android:fontFamily="@font/lato"
        android:text="Salvar"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="169dp"
        android:layout_height="49dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btncliqueaqui"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="@font/lato"
        android:text="Clique aqui"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtNome"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/edtcustomizado"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:hint="Nome:"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="310dp"
        android:background="@drawable/edtcustomizado"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:hint="Email:"
        android:inputType="textEmailAddress"
        android:paddingLeft="8dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/edtUrlFoto"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="430dp"
        android:background="@drawable/edtcustomizado"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:hint="UrlFoto:"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="370dp"
        android:background="@drawable/edtcustomizado"
        android:ems="10"
        android:fontFamily="@font/lato"
        android:hint="Senha:"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="169dp"
        android:layout_height="40dp"
        android:layout_marginTop="65dp"
        android:text="JÃ¡ tem conta?"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSalvar" />
</androidx.constraintlayout.widget.ConstraintLayout>